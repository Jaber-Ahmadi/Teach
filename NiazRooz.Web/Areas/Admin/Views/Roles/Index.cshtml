@model IEnumerable<NiazRooz.DomainClasses.Role>

@{
    ViewData["Title"] = "لیست نقش ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<br />
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/">نیاز روز</a>

            <span class="divider">
                <i class="icon-angle-right arrow-icon"></i>
            </span>
        </li>
        <li class="active">لیست نقش ها</li>
    </ul><!--.breadcrumb-->
</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="text-center admintableheading">
                <div class="panel-heading">
                    <i>
                        لیست نقش ها
                    </i>
                </div>
                <!-- /.panel-heading -->
            </div>

            <div class="admintablebody">
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="col-md-12" style="margin: 10px 0;">

                                <a asp-action="CreateRoles" class="btn btn-outline btn-success">افزودن نقش جدید</a>

                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead style="background: rgba(224, 244, 255, 7);border: 1px solid rgba(188, 203, 212,10) ">
                                    <tr>
                                        <th>عنوان نقش</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.RoleTitle</td>
                                            <td>
                                                <a href="/Admin/Roles/EditRoles/@role.RoleId" class="btn btn-warning btn-sm">
                                                    ویرایش
                                                </a>
                                                <a href="/Admin/Roles/DeleteRoles/@role.RoleId" class="btn btn-danger btn-sm">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>