@model NiazRooz.DomainClasses.User
@{
    ViewData["Title"] = "پایان ثبت نام";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<link href="~/Login/Login.css" rel="stylesheet" />

<div class="container success-register-container">
    <div id="login-box" class="login-box visible widget-box no-border">
        <div class="widget-body">
            <div class="widget-main text-center">
                <h4 class="header blue lighter bigger">
                    تکمیل ثبت نام
                </h4>

                <div class="space-6"></div>

                <div class="alert alert-success">
                    <h2>@Model.UserName عزیز </h2>
                    <h3>ثبت نام شما انجام شد ، ایمیلی حاوی لینک فعالسازی به ایمیمل "@Model.Email" ارسال شد .</h3>
                    <h3>جهت ادامه ثبت نام وارد ایمیل خود شوید و روی لینک کلیک کنید .</h3>
                </div>
            </div><!--/widget-main-->

            <div class="toolbar center">
                <a href="/Login" onclick="show_box('login-box'); return false;" class="back-to-login-link">
                    <i class="icon-arrow-left"></i>
                    برگشت به صفحه ورود
                </a>
            </div>
        </div><!--/widget-body-->
    </div><!--/login-box-->
</div>